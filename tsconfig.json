{
    "compilerOptions": {
        "module": "node16",
        "moduleResolution": "node16",
        "target": "es2020",
        "lib": [ "es2020" ],
        "outDir": "./dist",
        "noEmitOnError": false,
        "allowJs": true,
        "checkJs": true,
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
    },
    "include": [
        "devices/*.js",
        "lib/*.js",
        "google-*.js",
    ]
}
