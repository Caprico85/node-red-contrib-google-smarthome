{
    "root": true,
    "extends": [
        "eslint:recommended",
        "plugin:jsdoc/recommended"
    ],

    "env": {
        "es6": true,
        "node": true
    },

    "plugins": [
        "jsdoc"
    ],

    "globals": {
        "RED": true
    },

    "rules": {
        "indent": ["error", 4, {
            "SwitchCase": 1
        }]
    }
}
