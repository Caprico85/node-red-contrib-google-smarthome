{
    "root": true,
    "extends": "eslint:recommended",
    "env": {
        "browser": false,
        "es6": true,
        "node": true,
        "amd": false,
        "mocha": false,
        "jasmine": false
    },

    "globals": {
        "RED": true
    },

    "plugins": [
        "jsdoc"
    ],

    "rules": {
        "indent": ["error", 4, {
            "SwitchCase": 1
        }]
    }
}
